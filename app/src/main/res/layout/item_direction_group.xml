<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frame_direction_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_direction_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_recipe_directions_header"
            android:textColor="@color/scrim_text"
            android:gravity="center"
            tools:text="First Step" />

        <View style="@style/DividerHorizontal" android:background="@color/scrim_text" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_direction_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true" />

</LinearLayout>