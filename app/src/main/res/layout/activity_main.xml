<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_launch_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/btn_show_list"
        app:layout_constraintEnd_toStartOf="@+id/btn_launch_search"
        app:layout_constraintStart_toStartOf="@+id/hello_world"
        app:layout_constraintTop_toBottomOf="@+id/hello_world" />

    <Button
        android:id="@+id/btn_launch_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btn_show_search"
        app:layout_constraintEnd_toEndOf="@+id/hello_world"
        app:layout_constraintStart_toEndOf="@+id/btn_launch_list"
        app:layout_constraintTop_toBottomOf="@+id/hello_world" />

    <Button
        android:id="@+id/btn_add_recipe_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/btn_add_recipe_01"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_recipe_02"
        app:layout_constraintStart_toStartOf="@+id/hello_world"
        app:layout_constraintTop_toBottomOf="@+id/btn_launch_list" />

    <Button
        android:id="@+id/btn_add_recipe_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btn_add_recipe_02"
        app:layout_constraintEnd_toEndOf="@+id/hello_world"
        app:layout_constraintStart_toEndOf="@+id/btn_add_recipe_01"
        app:layout_constraintTop_toBottomOf="@+id/btn_launch_list" />

</androidx.constraintlayout.widget.ConstraintLayout>